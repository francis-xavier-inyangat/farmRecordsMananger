extends layout

block content
  h1 #{title}
  form(method='POST', action='/product/edit/'+product._id)
    .form-group
      label Title:
      input.form-control(name='title', type='text', value=product.pdtname)
    .form-group
      label Author:
      input.form-control(name='author', type='text', value=product.price)
    .form-group
      label Body:
      textarea.form-control(name='body', product.body)
    br
    input.btn.btn-primary(type='submit', value='Submit')
